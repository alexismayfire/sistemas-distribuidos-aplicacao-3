  "version": "0.2.0",
  "configurations": [
    {
      "name": "Servidor",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}/servidor",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": ["run", "--no-debugger"],
      "jinja": true
    },
    {
      "command": "npm start",
      "name": "Cliente",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceRoot}/cliente"
    }
  ]
}
